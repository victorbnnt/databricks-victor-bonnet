			"ResourceGroupName": {
				"type": "string",
				"defaultValue": "databricks-victor-bonnet"
			},
			"Region": {
				"type": "string",
				"defaultValue": "eastus"
			},
			"VMName": {
				"type": "string",
				"defaultValue": "premarket"
			},
			"Command": {
				"type": "string",
				"defaultValue": "Start"
			}
		},
		"variables": {
			"containerURL": {
				"type": "String",
				"defaultValue": "0"
			},
			"SASToken": {
				"type": "String",
				"defaultValue": "0"
			},
			"storageAccess": {
				"type": "Array"
			}
		},
		"annotations": []
